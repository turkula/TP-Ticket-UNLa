<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="datos.Evento" table="evento">
		<id column="idevento" name="idevento">
			<generator class="identity" />
		</id>
		<property column = "descripcion" name = "descripcion" type = "string" />
		<property column = "tipo" name = "tipo" type = "TipoEvento" />
		<set name="eventos" table="evento" 
			inverse="true" fetch="select" cascade = "all">
			<key column="idevento" not-null="true" />
			<one-to-many class="datos.Evento" />
		</set>
		<many-to-one name = "auditorio" class = "datos.Auditorio"
				column = "idAuditorio" not-null = "true" />
	</class>
</hibernate-mapping>